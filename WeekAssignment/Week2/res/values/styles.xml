<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/grey</item> <!-- Đặt màu nền cho button -->
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item> <!-- Thêm padding để khô-->
        <item name="android:layout_margin">2dp</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="buttonOperator">
        <item name="backgroundTint">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/grey1</item> <!-- Đặt màu nền cho button -->
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item> <!-- Thêm padding để khô-->
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>